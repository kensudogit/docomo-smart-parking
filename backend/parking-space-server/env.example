# Server Configuration
PORT=3002
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/docomo-parking-space
MONGODB_URI_TEST=mongodb://localhost:27017/docomo-parking-space-test

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Parking Lot Server Configuration
PARKING_LOT_SERVER_URL=http://localhost:3001

# MQTT Configuration (for IoT device communication)
MQTT_BROKER_URL=mqtt://localhost:1883
MQTT_USERNAME=your-mqtt-username
MQTT_PASSWORD=your-mqtt-password
MQTT_CLIENT_ID=parking-space-server

# Socket.IO Configuration
SOCKET_CORS_ORIGIN=http://localhost:3000

# Sensor Configuration
SENSOR_HEALTH_CHECK_INTERVAL=600000
SENSOR_BATTERY_THRESHOLD=20
SENSOR_SIGNAL_THRESHOLD=-80

# Sync Configuration
SYNC_INTERVAL=300000
SYNC_BATCH_SIZE=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/parking-space-server.log

# Rate Limiting (higher for IoT devices)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Maintenance Configuration
MAINTENANCE_CHECK_INTERVAL=600000
MAINTENANCE_ALERT_THRESHOLD=3 